/* pages/myMap/myMap.wxss */
/* 750rpx*1334rpx*/
.search-page {
  position: absolute;
  top: 108rpx;
  left: 3%;
  width: 94%;
  transition: height .2s;
  background-color: #F0FFFF;
  z-index: 100;
  border-radius: 30rpx;
}

.search-page .search-results {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-start;
  text-align: center;
  flex-grow: 0;
  flex-shrink: 0;
}

.search-page .font-results {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  flex-grow: 1;
  flex-shrink: 1;
  font-size:32rpx;
}
.search-page .location-icon {
  flex-shrink: 0;
  flex-grow: 0;
  width: 80rpx;
  height: 80rpx;
}

.map-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow-y: hidden;
}

#map {
  width: 100%;
  flex: 1;
}

/* .normal-text{
  font-size: 30rpx;
} */

.switch-date {
  position: absolute;
  top: 0rpx;
  left: 50%;
  margin-left: -150rpx;
  height: 5%;
  width: 300rpx;
  background-color: white;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  z-index: 1;
  flex-grow: 1;
}

.switch-date .date-icon {
  width: 56rpx;
  height: 56rpx;
  padding-right: 10rpx;
}

.icon-add {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  left: 50%;
  margin-top: -50rpx;
  margin-left: -50rpx;

}

.icon-on-left {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  top: 50%;
  left: 0rpx;
  margin-top: -32rpx;
  z-index:1;
}

.icon-on-right {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  top: 50%;
  right: 0rpx;
  margin-top: -32rpx;
  z-index:1;
}

.icon-edit {
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 99;
}

.icon-show-map {
  position: fixed;
  bottom: 5%;
  right: 10%;
  width: 80rpx;
  height: 80rpx;
  z-index: 1;
}

.customCallout {
  color: rgb(255, 255, 255);
  font-size: 15px;
  font-weight: 1000;
}

/* 下面是page-container的css */

