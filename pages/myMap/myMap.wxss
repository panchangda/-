/* 750rpx*1334rpx*/
.search-page{
  position: absolute;
  top:108rpx;
  left:0rpx;
  background-color: rgb(12, 107, 233);
  z-index: 100;
}

#map{
  width:100%;
  height:1000rpx;
}
/* .normal-text{
  font-size: 30rpx;
} */
.switch-date{
  height:6%;
  width: 754rpx;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-grow:1;
}
/* 日期按钮不会自动缩小 */

.button-add{
  height:rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scheduleInfo{
  width:100%;
  height:50rpx;
  background-color: grey;
  text-align: left;
}
.icon-add{
  width: 100rpx;
  height: 100rpx;
}
.icon-on-left{
  position:absolute;
  z-index:1;
  top:45%;
  left:0rpx;
}
.icon-on-right{
  position:absolute;
  z-index:1;
  top:45%;
  right:0rpx;
}
.icon-double-down{
  position:fixed;
  top:0rpx;
  left:0rpx;
  width:90rpx;
  height:60rpx;
  z-index: 100;
}
.icon-double-up{
  position:fixed;
  bottom:0rpx;
  left:375rpx;
  width:100rpx;
  height:60rpx;
  z-index:100;
}


.customCallout{
  color:rgb(255, 255, 255);
  font-size: 15px;
  font-weight: 1000;
}

/* 下面是page-container的css */

.searchBlock{
  display:flex;
  flex-direction: row;
  align-items: center;
}

.searchIcon{
  display:inline-block;
}

.inputForm{
  display:inline-block;
  border-radius: 30rpx;
  border:1rpx solid black;
  border-left:1rpx solid white;
  /* height: 2rem;
  min-height: 2rem; */
  width:600rpx;
}

.search-results{
  display:flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-start;
  text-align: center;
  flex-grow:0;
  flex-shrink:0;
}

.font-results{
  display:flex;
  flex-direction: column;
  flex-wrap:wrap;
  flex-grow:1;
  flex-shrink:1;
}

