.container {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.item-container {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  background: #FFFFFF; 
}
.pic{
  font-size: 0;
}
.pic .image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}

.texts{
  flex:1;
}

.texts .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.texts .description {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  color: #666666;
  font-size: 24rpx;
}

.attrs{
  display:flex;
  flex-wrap: wrap;
}