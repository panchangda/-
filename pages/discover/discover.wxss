.container {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.item-container {
  height: 100%;
  display: flex;
  padding: 12rpx;
  box-sizing: border-box;
  background: #FFFFFF; 
  justify-content: center;
  align-content: center;
}
.pic .image{
  width: 192rpx;
  height: 192rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}
.texts{
  flex:1;
}
.texts .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  font-size: 32rpx;
  margin-bottom: 4rpx;
}
.texts .description {
  padding-top: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  color: #666666;
  font-size: 24rpx;
}
.box{
  position: relative;
  height:210rpx;
  width: 100%;
}
.attrs{
  position: absolute;
  left:230rpx;
  bottom:8rpx;
  display:flex;
  flex-wrap: wrap;  
  justify-content: flex-start;
  align-items: center;
}

.attrs .icon{
  height: 50rpx;
  width: 50rpx;
}
.attrs .fonts{
  font-size:28rpx;
  padding-right:15rpx;
  padding-left:5rpx;
}

.loading {
  display: flex;
  justify-content: center;
}

