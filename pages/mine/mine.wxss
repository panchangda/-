/* pages/mine/mine.wxss */

.top-background {
  width: 100%;
  height: 600rpx;
  position: relative;
  z-index: -1;
  overflow: hidden;
}

.top-background::after {
  position: absolute;
  content: '';
  width: 150%;
  height: 550rpx;
  position: absolute;
  left: -25%;
  top: 0;
  z-index: -1;
  border-radius: 0 0 70% 50%;
  background: linear-gradient(160deg, #45c1fa, #f9fff5);
}

.user-info {
  height: 500rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

}

.user-avatar {
  height: 200rpx;
  width: 200rpx;
  overflow: hidden;
  display: block;
  border-radius: 50%;
}

.user-nickname {
  font-size: 36rpx;
  padding-top: 50rpx;
}

.user-options {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-bottom: 50rpx;
}
.options-container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  font-size: 24rpx;
}

.icon {
  position: absolute;
  left: 450rpx;
  top: -20rpx;
  width: calc(128rpx + 64rpx);
  height: 64rpx;
  display: flex;
  justify-content: flex-start;
  align-content: center;
  flex-direction: row;
}

.icon-share {
  flex: 0 0 64rpx !important;
  border: 0 !important;
}

.icon-more {
  flex: 0 0 64rpx !important;
  border: 0 !important;
}

.gallery1 {
  width: 580rpx;
  height: 180rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: nowrap;
  white-space: nowrap;
}
.empty{
  width: 580rpx;
  height: 180rpx;
}

.gallery2 {
  width: 580rpx;
  height: 180rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: nowrap;
  white-space: nowrap;
}

.gallery1 .pics {
  height: 100%;
  display: inline-block;
}

.gallery2 .pics {
  height: 100%;
  display: inline-block;
}

.wux-timeline {
  padding-top: 50rpx;
  padding-left: 50rpx;
}
.wux-timeline-item{
  font-size: 32rpx !important;
}

.loading {
  display: flex;
  justify-content: center;
}